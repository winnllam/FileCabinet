!!!
%html
%head
  %title FileCabinet
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  = csrf_meta_tags
%body
  %header
    .header_inner
      = link_to "FileCabinet", root_path, id: "logo"

      %nav
        - if user_signed_in? #different nav depending if signed in or not
          = link_to "Create Doc", new_doc_path
          = link_to "Sign Out", destroy_user_session_path, method: :delete #from devise

        - else
          = link_to "Log In", new_user_session_path #from devise

  %p.notice= notice #  <p class="notice"><%= notice %></p>
  %p.alert= alert #  <p class="alert"><%= alert %></p>

  = yield
